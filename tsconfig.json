{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "target": "ES5",
    "types": ["node"],
    "typeRoots": ["node"],
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "incremental": true,
    "strictNullChecks": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
  